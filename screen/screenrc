startup_message off
vbell off
defscrollback 20000

bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

hardcopydir /tmp

hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

bind _ eval "scrollback 0" "scrollback 15000"

shell -$SHELL

#utf-8 on
defutf8 on

monitor on

# unbind
bind s
bind ^s
bind q
bind ^q
