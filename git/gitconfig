[include]
path = .gitconfig.local

[core]
editor = vim
#pager = vimpager
#whitespace = trailing-space,space-before-tab,tab-in-indent
whitespace = trailing-space,space-before-tab,indent-with-non-tab
autocrlf = input

[color]
diff = true
status = auto
branch = always
interactive = always
ui = always
pager = true
grep = auto

[color "branch"]
current = green
local = normal
remote = red
upstream = bold yellow
plain = normal

[alias]
tree = log --graph --decorate --pretty=oneline --abbrev-commit
tree2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) %C(bold yellow)%d%C(reset) %C(white)%s%C(reset) %C(dim green)- %an%C(reset)' --all
tree3 = log --graph --abbrev-commit --decorate --format=format:'%Cred%h%Creset%C(bold yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev=8 --date=relative --all

[apply]
whitespace = fix

[mergetool]
keepBackup = false

[mergetool "vimdiff3"]
cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[merge]
tool = vimdiff3

[pull]
rebase = true

[branch]
autosetuprebase = always

[push]
default = nothing

# Use `hexdump` to diff binary files
[diff "bin"]
textconv = hexdump -v -C

[diff "pdf"]
textconv = pdfinfo

[diff "zip"]
textconv = unzip -v
