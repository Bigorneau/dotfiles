[include]
path = .gitconfig.local

[core]
editor = vim
#pager = vimpager

[color]
diff = true
status = auto
branch = always
interactive = always
ui = always
pager = true
grep = auto

[mergetool "vimdiff3"]
cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[merge]
tool = vimdiff3

[branch]
autosetuprebase = always

[push]
default = nothing

# Use `hexdump` to diff binary files
[diff "bin"]
textconv = hexdump -v -C
