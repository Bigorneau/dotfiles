[include]
path = .gitconfig.local

[core]
editor = vim
#pager = vimpager

[color]
diff = true
status = auto
branch = always
interactive = always
ui = always
pager = true
grep = auto

[color "branch"]
current = green
local = normal
remote = red
upstream = bold yellow
plain = normal

[alias]
tree = log --graph --decorate --pretty=oneline --abbrev-commit

[mergetool "vimdiff3"]
cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[merge]
tool = vimdiff3

[branch]
autosetuprebase = always

[push]
default = nothing

# Use `hexdump` to diff binary files
[diff "bin"]
textconv = hexdump -v -C

[diff "pdf"]
textconv = pdfinfo

[diff "zip"]
textconv = unzip -v
