defaults.pcm.card 0
defaults.ctl.card 0

pcm.!default {
	type hw
	card 0
}

ctl.!default {
	type hw
	card 0
}

# Use PulseAudio by default
pcm.!default {
  type pulse
  #card 1
  fallback "sysdefault"
  hint {
    show on
    description "Default ALSA Output (currently PulseAudio Sound Server)"
  }
}

ctl.!default {
  type pulse
  #card 1
  fallback "sysdefault"
}
